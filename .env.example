# ===========================================
# FinSquare Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# App Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/finsquare?schema=public

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# ===========================================
# Third-Party Integrations
# ===========================================

# Termii (SMS OTP)
TERMII_API_KEY=your-termii-api-key
TERMII_SENDER_ID=FinSquare

# ZeptoMail (Email)
ZEPTO_TOKEN=your-zeptomail-token
ZEPTO_FROM_EMAIL=noreply@yourdomain.com
ZEPTO_FROM_NAME=FinSquare

# Mono (BVN/KYC Verification)
MONO_SECRET_KEY=your-mono-secret-key
MONO_PUBLIC_KEY=your-mono-public-key

# 9PSB WAAS (Wallet as a Service)
PSB_WALLET_API_URL=https://api.9psb.com.ng/waas
PSB_WALLET_AUTH_URL=https://api.9psb.com.ng/waas/oauth/token
PSB_WALLET_CLIENT_ID=your-client-id
PSB_WALLET_CLIENT_SECRET=your-client-secret
PSB_WALLET_USERNAME=your-username
PSB_WALLET_PASSWORD=your-password

# 9PSB Basic Auth (for certain endpoints)
PSB_BASIC_AUTH_USERNAME=your-basic-auth-username
PSB_BASIC_AUTH_PASSWORD=your-basic-auth-password

# Firebase (Push Notifications)
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"
